##########################################
# $(P)$(R)setX
# Sets outlet X On (VAL=1) or Off (VAL=0)
##########################################

record (bo, "$(P)$(R)set1")
{
    field (DTYP, "stream")
    field (VAL, 0)
    field (OUT,  "@Synaccess_netBooter.proto set(1) $(PORT)")
    field (FLNK,  "$(P)$(R)get_status.PROC")
}

